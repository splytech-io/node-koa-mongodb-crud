{
  "name": "@splytech-io/koa-mongodb-crud",
  "version": "2.1.0",
  "description": "Koa MongoDB CRUD",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "test": "nyc mocha --require ts-node/register --exit 'src/**/*.spec.ts'",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "build": "tsc",
    "prepush": "npm run lint",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "mongodb",
    "koa",
    "crud"
  ],
  "author": "Andrius Skerla",
  "license": "Apache-2.0",
  "dependencies": {
    "@splytech-io/cast": "^1.1.1",
    "@splytech-io/request-validation": "^0.2.1",
    "@types/bson": "^4.0.2",
    "@types/debug": "^4.1.5",
    "@types/joi": "^14.3.4",
    "@types/node": "^13.9.8",
    "bson": "^4.0.4",
    "joi": "^14.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^9.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "husky": "^4.2.3",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "sinon": "^9.0.1",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.8.3"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "ts": "node_modules/.bin/ts-node"
    },
    "watch": [
      "src/**/*.ts"
    ],
    "ext": "ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/test-helpers.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/splytech-io/node-koa-mongodb-crud.git"
  },
  "bugs": {
    "url": "https://github.com/splytech-io/node-koa-mongodb-crud/issues"
  },
  "homepage": "https://github.com/splytech-io/node-koa-mongodb-crud#readme"
}
