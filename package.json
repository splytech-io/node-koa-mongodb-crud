{
  "name": "@splytech-io/koa-mongodb-crud",
  "version": "0.0.1",
  "description": "Koa MongoDB CRUD",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "test": "nyc mocha --require ts-node/register --exit 'src/**/*.spec.ts'",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "build": "tsc",
    "prepush": "npm run lint",
    "prepublish": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "mongodb",
    "koa",
    "crud"
  ],
  "author": "Andrius Skerla",
  "license": "ISC",
  "dependencies": {
    "@splytech-io/cast": "0.0.1",
    "@splytech-io/request-validation": "^0.1.2",
    "@types/bson": "^1.0.7",
    "@types/debug": "0.0.30",
    "@types/joi": "^13.0.7",
    "@types/node": "^9.6.4",
    "bson": "^2.0.5",
    "joi": "^13.1.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.0.0",
    "@types/sinon": "^4.3.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "husky": "^0.14.3",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0",
    "sinon": "^4.5.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^2.8.1"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "ts": "node_modules/.bin/ts-node"
    },
    "watch": [
      "src/**/*.ts"
    ],
    "ext": "ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/splytech-io/node-koa-mongodb-crud.git"
  },
  "bugs": {
    "url": "https://github.com/splytech-io/node-koa-mongodb-crud/issues"
  },
  "homepage": "https://github.com/splytech-io/node-koa-mongodb-crud#readme"
}
